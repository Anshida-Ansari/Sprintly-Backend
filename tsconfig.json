{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"@application/*": [
				"application/*"
			],
			"@domain/*": [
				"domain/*"
			],
			"@infrastructure/*": [
				"infrastructure/*"
			],
			"@presentation/*": [
				"presentation/*"
			],
			"@shared/*": [
				"shared/*"
			]
		},
		"types": [
			"node"
		],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}